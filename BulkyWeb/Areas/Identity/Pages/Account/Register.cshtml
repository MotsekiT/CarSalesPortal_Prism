@page
@model RegisterModel


<h1>@ViewData["Title"]</h1>

<div class="card shadow border-0 mt-4 mx-auto" style="max-width: 700px;">
    <!-- Card Header -->
    <div class="card-header bg-secondary bg-gradient text-center py-3">
        <h2 class="text-white">Register</h2>
    </div>

    <!-- Card Body -->
    <div class="card-body p-4">
        <div class="row justify-content-center">

            <!-- Image in the Center -->
            <div class="col-12 text-center mb-4">
                <img src="~/images/prism.jpg" alt="Register Image" class="img-fluid" style="width: 150px; height: 100px; object-fit: cover;">

            </div>

            <!-- Registration Form -->
            <div class="col-12">
                <form id="registerForm" class="row g-3" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4 class="border-bottom pb-3 mb-4 text-secondary text-center">Create an Account</h4>

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Email Input -->
                    <div class="form-floating mb-3 col-12">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Name and Phone Input -->
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Name" class="form-control" placeholder="Name" />
                        <label asp-for="Input.Name" class="text-muted">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <label asp-for="Input.PhoneNumber" class="text-muted">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Password and Confirm Password -->
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                        <label asp-for="Input.Password" class="text-muted">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                        <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Address Inputs -->
                    <div class="form-floating mb-3 col-12">
                        <input asp-for="Input.StreetName" class="form-control" placeholder="Street Address" />
                        <label asp-for="Input.StreetName" class="text-muted">Street Address</label>
                        <span asp-validation-for="Input.StreetName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.City" class="form-control" placeholder="City" />
                        <label asp-for="Input.City" class="text-muted">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.State" class="form-control" placeholder="State" />
                        <label asp-for="Input.State" class="text-muted">Province</label>
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>

                    <!-- Role Selection -->
                   @*  <div class="form-floating mb-3 col-12">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected>-Select Role-</option>
                        </select>
                        <label asp-for="Input.Role">Role</label>
                    </div> *@

                    <!-- Register Button -->
                    <div class="col-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-primary btn-lg">Register</button>
                    </div>
                </form>
            </div>

            <!-- Divider and External Login -->
            
        </div>
    </div>
</div>








@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
       
          $(document).ready(function(){
            $('#Input_Role').change(function(){
                var selection = $('#Input_Role Option:Selected').text();
                if(selection == 'Company')
                {
                    $('#Input_CompanyId').show();
                }
                else
                {
                    $('#Input_CompanyId').hide();
                }
            })
        })

    </script>
}

