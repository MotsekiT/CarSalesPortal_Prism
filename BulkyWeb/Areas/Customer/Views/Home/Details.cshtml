@model ShoppingCart

<form method="post">
    <input type="hidden" asp-for="CarId" />

    <div class="card shadow-lg border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light text-center py-4">
            <h3 class="text-white text-uppercase mb-0">@Model.Car.Model</h3>
            <p class="text-white-50 fw-semibold mb-0">by @Model.Car.Make</p>
        </div>

        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-12 col-md-2 offset-lg-1 pb-1">
                    <a asp-action="Index" class="btn btn-outline-primary fw-semibold btn-sm text-uppercase w-100">
                        Back to home
                    </a>
                </div>
                <div class="col-12 col-md-2 ms-auto pb-1 text-md-end">
                    <button type="button" class="btn btn-success fw-semibold btn-sm w-100">@Model.Car.Status</button>
                </div>
            </div>

            <div class="row align-items-start py-4">
                <div class="col-12 col-lg-3 text-center">
                    <img src="@Model.Car.ImageUrl" alt="@Model.Car.Model Image" class="img-fluid rounded mb-3" />
                </div>

                <div class="col-12 col-lg-6 offset-lg-1">
                    <span class="badge bg-warning text-dark">@Model.Car.Category.Name</span>

                    <div class="my-4">
                        <p class="text-muted mb-2"><strong>Year:</strong> @Model.Car.Year</p>
                        <p class="text-muted mb-2"><strong>Colour:</strong> @Model.Car.Colour</p>
                    </div>

                    <div class="d-flex bg-light p-3 rounded align-items-center">
                        <span class="badge bg-white text-warning fw-bold me-2">Price</span>
                        <span class="text-warning fw-bold">@Model.Car.Price.ToString("c")</span>
                    </div>

                    <p class="text-secondary my-3 lh-sm">@Html.Raw(Model.Car.Model)</p>

                    <div class="col-12 col-md-6 mt-4">
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold text-uppercase">
                            Add To Find out more
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
