@model IEnumerable<Car>

<div class="row pb-3">

    <div class="row p-2 justify-content-center">
        <div class="col-md-6">
            <form class="d-flex justify-content-center" asp-action="Index" asp-controller="Home">
                <input name="searchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search" value="@ViewData["CurrentFilter"]">
                <button class="btn btn-dark" type="submit">Search by Make & Model</button>
            </form>
        </div>
        <div class="col-md- text-center mt-2">
            
            <a asp-action="Index" type="button" class="btn btn-outline-dark">Back to Full List</a>
        </div>
    </div>


    @foreach (var car in Model)
    {
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
            <div class="card border-0 shadow-lg h-100">
                <img src="@car.ImageUrl" alt="@car.Model Image" class="card-img-top rounded-top" style="max-height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-warning text-center fw-bold">@car.Model</h5>
                    <h6 class="card-subtitle mb-2 text-dark text-uppercase text-center opacity-75">@car.Make</h6>

                    <p class="text-muted text-center mb-1">
                        <strong>Price:</strong> @car.Price.ToString("c")
                    </p>
                    <p class="text-muted text-center">
                        <strong>Colour:</strong> @car.Colour
                    </p>

                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-productId="@car.Id" class="btn btn-primary w-100">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>