@model ShoppingCartVM


<form method="post" class="my-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="d-flex justify-content-between align-items-center px-4">
                <h5 class="mb-0 text-white text-uppercase">Enquiry Cart</h5>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-2 offset-md-1 mb-3">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary fw-semibold text-uppercase w-100 btn-sm">
                        Continue Shopping
                    </a>
                </div>
                <div class="col-md-10 offset-md-1">
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row border-bottom pb-3 align-items-center mb-4">
                            <div class="col-lg-1 text-center d-none d-lg-block">
                                <img src="@item.Car.ImageUrl" alt="@item.Car.Model Image" class="rounded img-fluid" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h6 class="text-uppercase text-secondary fw-bold mb-2">@item.Car.Make</h6>
                                <p class="mb-0 text-muted"><small>@Html.Raw(@item.Car.Model)</small></p>
                            </div>
                            <div class="col-12 col-lg-5 row text-center">
                                <div class="col-3 text-lg-right pt-2 pt-lg-4">
                                    <h6 class="fw-semibold text-nowrap">
                                        @item.Car.Price.ToString("c")
                                    </h6>
                                </div>
                                <div class="col-6 pt-2">
                                    <!-- Optional space for quantity or other actions -->
                                </div>
                                <div class="col-3 text-right">
                                    <a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger py-2">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-2">
                    <a asp-action="Summary" class="btn btn-primary bg-gradient border-0 w-100 py-2 fw-bold text-uppercase">
                        Find Out More
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

